<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hypermart.login">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Hyper Mart"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SignIn" />
        <activity android:name=".SignUp" />
        <activity
            android:name=".Main"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity android:name=".EditAccount" />
        <activity android:name=".MyAccount" />
        <activity android:name=".Home" />
        <activity android:name=".EditProducts" />
        <activity android:name=".ShoppingCart" />
        <activity android:name=".CustomerProducts" />
        <activity android:name=".Orders" />
        <activity android:name=".EditOrder" />
        <activity android:name=".DeliveryInfo" />
        <activity android:name=".PaymentInfo" />
        <activity android:name=".PaymentForCard"></activity>
    </application>

</manifest>